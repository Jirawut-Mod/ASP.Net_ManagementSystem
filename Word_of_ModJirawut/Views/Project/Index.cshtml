@model IEnumerable<Project>;
@{
    ViewData["Title"] = "รายการ Project";
}

<h1 class="text-center">รายการ Project</h1>

<button class="btn btn-primary my-2" asp-controller="Project" asp-action="Create">เพิ่มรายการ</button>

@if (Model.Count()>0)
{
    <table class="table table-bordered table-hover">
        <thead style="background-color: black; color: white;">
            <tr>
                <th>รหัสรายการ</th>
                <th>ชื่อรายการ</th>
                <th>ราคาต่อหน่วย</th>
                <th>จำนวน</th>
                <th>ราคา</th>
                <th>หมายเหตุ</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
            </tr>
        </thead>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.PriceUnit</td>
                <td>@project.Qty</td>
                <td>@project.Price</td>
                <td>@project.Note</td>
                <td><a class="btn btn-warning" asp-controller="Project" asp-action="Edit" asp-route-id="@project.Id">แก้ไข</a></td>
                <td><a class="btn btn-danger" asp-controller="Project" asp-action="Delete" asp-route-id="@project.Id" onclick="return confirm('คุณต้องการลบรายการ @project.Name หรือไม่ ?')">ลบ</a></td>
            </tr>
        }
        <tbody>
        </tbody>
    </table>

}
else 
{
    <div class="alert alert-secondary text-center">ไม่มีข้อมูลรายการในระบบ</div>
}